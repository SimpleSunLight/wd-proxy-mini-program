/* 顶部导航 */
.status-bar {
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 9999;
  position: fixed;
}

.status-bar .goBack {
  top: 68rpx;
  left: 40rpx;
  position: absolute;
}

.status-bar .goBack .left-icon {
  width: 44rpx;
  height: 44rpx;
}

.bar-content {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.list-page-search {
  width: 100%;
}

.list-page-search-input {
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
  height: 60rpx !important;
  margin: 24rpx 40rpx;
}

.bar-content .head-text {
  height: 50rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 62rpx;
  line-height: 50rpx;
  font-family: PingFangSC-Medium, PingFang SC;
}

.bar-content .small-title {
  font-size: 24rpx;
  font-weight: 400;
  padding-top: 12rpx;
  color: rgba(255,255,255,0.8);
  font-family: PingFangSC-Regular, PingFang SC;
}

.search-input-icon {
  font-size: 28rpx;
  font-weight: 400;
  color: #b7b7b7;
  font-family: PingFangSC-Regular, PingFang SC;
}