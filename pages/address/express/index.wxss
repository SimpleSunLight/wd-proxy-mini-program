/* pages/address/express/index.wxss */
page {
  height: 100%;
  /* overflow: hidden; */
  background: #f5f5f5;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.express-search .bag-list {
  display: flex;
  padding: 28rpx 0;
  background: #fff;
  align-items: center;
  flex-direction: column;
}

.express-search .bag-list .total-bag {
  height: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999;
  line-height: 34rpx;
  width: 560rpx;
  padding-left: 32rpx;
}

.express-search .bag-list .bag-name {
  width: 560rpx;
  margin-left: 32rpx;
}

.express-search .bag-list .bag-name text {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #333;
  line-height: 44rpx;
}

.express-search .bag-list .bag-name image {
  width: 30rpx;
  height: 22rpx;
  margin-right: 8rpx;
}

.express-search .bag-list .bag-view {
  display: flex;
}

.express-search .bag-list .bag-view .bag-view-left {
  left: -43rpx;
  display: flex;
  position: relative;
  align-items: center;
}

.express-search .bag-list .bag-view .bag-view-right {
  right: -43rpx;
  display: flex;
  position: relative;
  align-items: center;
}

.express-search .bag-list .bag-view .bag-view-left image,
.express-search .bag-list .bag-view .bag-view-right image {
  width: 26rpx;
  height: 40rpx;
}

.express-search .bag-list .bag-icon {
  display: flex;
  flex-wrap: wrap;
  width: 560rpx;
  margin-bottom: 16rpx;
}

.express-search .bag-list .bag-icon .bag-list-page {
  width: 120rpx;
  height: 120rpx;
  margin-top: 16rpx;
  margin-left: 16rpx;
}

.express-search .bag-list .bag-icon .bag-list-page image {
  width: 120rpx;
  height: 120rpx;
}

.xbq-express {
  display: flex;
  height: 84rpx;
  margin-left: 42rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}

.xbq-express .xbqsf {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
}

.xbq-express .copy {
  width: 136rpx;
  height: 40rpx;
  border-radius: 10rpx;
  padding: 0 !important;
  border: 1px solid #eee;
  font-size: 24rpx;
  color: #999;
  margin: 0;
  background: #fff;
  padding-right: 8rpx;
}


/*物理跟踪*/
.kuaidi_follow {
  background: #fff;
  margin-top: 20rpx;
  padding: 0 32rpx 0 54rpx;
}

.kuaidi_follow .follow_satus {
  border-left: 4rpx solid #eee;
}

.kuaidi_follow .follow_satus .follow_address {
  position: relative;
  margin: 40rpx 0 0 42rpx;
}

.kuaidi_follow .follow_satus .follow_address .address {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666;
  margin-top: 4rpx;
  line-height: 34rpx;
}

.kuaidi_follow .follow_satus .follow_address .label {
  width: 12rpx;
  height: 12rpx;
  left: -50rpx;
  position: absolute;
  background: #eee;
}

.kuaidi_follow .follow_satus .follow_address .label.default {
  left: -60rpx;
}

.kuaidi_follow .follow_satus .follow_address .label.default image {
  width: 32rpx;
  height: 32rpx;
}

.kuaidi_follow .follow_satus .follow_address .address.default text {
  color: #189bff;
}

.kuaidi_follow .follow_satus .follow_address .status {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666;
  line-height: 40rpx;
}

.kuaidi_follow .follow_satus .follow_address .date {
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666;
  margin-top: 6rpx;
  line-height: 28rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}