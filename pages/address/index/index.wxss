/* pages/address/index.wxss */


page {
  height: 100%;
  background: #f5f5f5;
}

.address-view {
  /* height: 630rpx; */
  background: #fff;
}

.address-view .address-view-wrapper {
  padding: 36rpx 40rpx 28rpx 40rpx;
}

.address-view .address-view-wrapper .city-area {
  margin-top: 58rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  font-family: PingFangSC-Medium, PingFang SC;
}

.address-view .address-view-wrapper .city-area input {
  width: 100%;
  border-bottom: 2rpx solid #eee;
}

.address-view .address-view-wrapper .detail-address {
  margin-top: 26rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  font-family: PingFangSC-Medium, PingFang SC;
}

.address-view .address-view-wrapper .smart-write {
  margin-top: 26rpx;
  background: #f5f5f5;
  padding: 14rpx 16rpx;
}

.address-view .address-view-wrapper .smart-write .smart-promot {
  height: 34rpx;
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: #979797;
  line-height: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.address-view .address-view-wrapper .smart-action {
  display: flex;
  height: 40rpx;
  margin-top: 20rpx;
  justify-content: flex-end;
}

.address-view .address-view-wrapper .smart-action button {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #fff;
  width: 140rpx;
  height: 40rpx;
  background: #FD4C72;
  border-radius: 10rpx;
  padding: 0 !important;
  margin: 0;
}

.address-view .address-view-wrapper .smart-action text {
  width: 48rpx;
  height: 34px;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ccc;
  padding-right: 28rpx;
  line-height: 34rpx;
}

.address-view .address-view-wrapper .smart-write textarea {
  width: auto;
  height: 122rpx;
  font-size: 24rpx;
}

.address-view .address-view-wrapper .detail-address textarea {
  width: 100%;
  flex-wrap: wrap;
  height: 72rpx;
  padding-top: 4rpx;
  /* padding-right: 42rpx; */
  /* border-bottom: 2rpx solid #eee; */
}

.address-view .address-view-wrapper .name-tel {
  display: flex;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  font-family: PingFangSC-Medium, PingFang SC;
}

.address-view .address-view-wrapper .name-tel text,
.address-view .address-view-wrapper .detail-address text {
  font-size: 20rpx;
  color: #999;
}

.address-view .address-view-wrapper .name-tel .name-view {
  width: 200rpx;
  /* border-bottom: 2rpx solid #eee; */
}

.address-view .address-view-wrapper .name-tel .name-view view,
.address-view .address-view-wrapper .name-tel .tel-view view,
.address-view .address-view-wrapper .detail-address view {
  display: flex;
  align-items: center;
  position: relative;
  padding-right: 28rpx;
  border-bottom: 2rpx solid #eee;
}

.address-view .address-view-wrapper .city-area {
  display: flex;
  height: 58rpx;
  align-items: center;
  position: relative;
}

.address-view .address-view-wrapper .name-tel .name-view image,
.address-view .address-view-wrapper .name-tel .tel-view image,
.address-view .address-view-wrapper .detail-address image {
  right: 0;
  z-index: 2;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
}

.address-view .address-view-wrapper .city-area image {
  right: 0;
  z-index: 2;
  width: 24rpx;
  height: 16rpx;
  position: absolute;
}

.address-view .address-view-wrapper .name-tel .name-view input {
  padding-bottom: 10rpx;
}

.address-view .address-view-wrapper .name-tel .tel-view input {
  padding-bottom: 10rpx;
}

.address-view .address-view-wrapper .name-tel .tel-view {
  width: 442rpx;
  margin-left: 28rpx;
  /* border-bottom: 2rpx solid #eee; */
}

.address-view .address-view-wrapper .name-tel .name-view .name-placeholder,
.address-view .address-view-wrapper .name-tel .tel-view .tel-placeholder,
.address-view .address-view-wrapper .city-area .city-placeholder,
.address-view .address-view-wrapper .detail-address .detail-placeholder {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999;
}

.address-view .address-view-wrapper .detail-address .detail-placeholder {
  padding-top: 20rpx;
}

.address-view .address-view-wrapper .detail-address input,
.address-view .address-view-wrapper .city-area input {
  padding-bottom: 14rpx;
}

.address-view .address-confirm {
  left: 40rpx;
  right: 40rpx;
  bottom: 40rpx;
  position: fixed;
}

.address-view .address-confirm button {
  width: 100%;
  color: #fff;
  border: 10rpx;
  font-size: 32rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
}

