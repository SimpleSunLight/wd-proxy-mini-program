/* pages/shop/agent/index.wxss */
page {
  height: 100%;
  background: #f5f5f5;
}

/* .contentList {
  box-sizing: border-box;
} */

.contentList {
  padding-bottom: 20rpx;
  box-sizing: border-box;
  height: 100%;
  bottom: 0;
  position: absolute;
}

.address_top {
  height: 60rpx;
  color: #999;
  line-height: 60rpx;
  font-size: 24rpx;
  padding: 0 40rpx;
}

.address_bottom {
  height: 128rpx;
  line-height: 128rpx;
  background: #fff;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 2rpx #ebebeb solid;
}

.address_bottom .proxy-title {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
}

.address_bottom .proxy-country {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999;
  line-height: 34rpx;
}

.orientation {
  white-space: normal;
  display: inline-block;
  width: 16rpx;
  /* height: 50rpx; */
  font-size: 16rpx;
  font-weight: bold;
  /* color: rgb(88, 87, 87); */
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.orientation_region {
  width: 16rpx;
  right: 8rpx;
  position: fixed;
  font-size: 16rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* top: 50%; */
  /* right: 6rpx; */
  /* transform: translate(0, -50%); */
  /* background: rgb(199, 198, 198); */
  /* border-radius: 10px; */
}

.orientation_city {
  height: 40rpx;
  line-height: 40rpx;
  color: #000;
  text-align: center;
}

.active {
  color: #999;
}

.list-fixed {
  width: 100%;
  z-index: 999;
  height: 60rpx;
  color: #999;
  font-size: 24rpx;
  padding: 0 40rpx;
  line-height: 60rpx;
  position: absolute;
  background: #f5f5f5;
}

.fixed-title {
  color: #999;
}

.hide {
  display: none;
}