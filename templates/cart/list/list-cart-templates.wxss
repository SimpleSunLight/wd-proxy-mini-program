.shop-icon-name .shop-description text {
  padding: 0 8rpx;
}

.shop-icon-name .shop-list-scoll .scoll-shop-css {
  height: 44rpx;
  color: #FD4C72;
  font-size: 32rpx;
  line-height: 44rpx;
}

.shop-list-scoll {
  display: flex;
  margin-top: 38rpx;
  position: relative;
}

.shop-list-scoll .cart-company {
  font-size: 20rpx;
  padding-top: 10rpx;
  padding-left: 4rpx;
}

.shop-icon-name .shop-list-scoll .scoll-shop-num {
  width: 180rpx;
  display: flex;
  right: 0;
  top: 4rpx;
  position: absolute;
  border-radius: 10rpx;
  border: 2rpx solid #b7b7b7;

}

.shop-icon-name .shop-list-scoll .scoll-shop-num button {
  height: 40rpx;
  border-radius: 0;
  line-height: 40rpx;
  width: 46rpx !important;
  padding: 0 !important;
}

.shop-icon-name .shop-list-scoll .scoll-shop-num .reduce {
  border-right: 2rpx solid #b8b8b8;
}

.shop-icon-name .shop-list-scoll .scoll-shop-num .count {
  width: 88rpx;
  text-align: center;
}

.shop-icon-name .shop-list-scoll .scoll-shop-num .plus {
  border-left: 2rpx solid #b8b8b8;
}

.all-check{
  width: 28rpx;
  height: 28rpx;
  line-height: 78rpx;
  /* margin-top: 26rpx; */
  margin-left: 20rpx;
  margin-bottom: 6rpx;
}

.all-list-check{
  width: 28rpx;
  /* height: 28rpx; */
  margin: 0 auto;
  line-height: 180rpx;
}

checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  border: 2rpx solid #ccc;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FD4C72;
  border-color: transparent;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}