/* templates/cart/list/list-cart-templates.wxss */

.cart-shop-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.list-shop-title {
  display: flex;
  border-radius: 20rpx;
}

.cart-shop-check {
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  border: 2rpx solid #ccc;
  margin-top: 26rpx;
  margin-left: 20rpx;
  margin-bottom: 6rpx;
}


.list-shop-title .icon-shop {
  width: 30rpx;
  height: 30rpx;
  margin-top: 28rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.list-shop-title .shop-name {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #333;
  line-height: 44rpx;
  margin-top: 20rpx;
  margin-left: 8rpx;
}

.touch-item {
  width: 100%;
  display: flex;
  /* overflow: hidden; */
  justify-content: space-between;
}

.shop-real-list {
  display: flex;
  height: 180rpx;
  padding: 20rpx;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(100rpx);
  transform: translateX(100rpx);
  margin-left: -100rpx;
}


.touch-move-active .shop-real-list,
.touch-move-active .touchdel {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.touchdel {
  background-color: orangered;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(100rpx);
  transform: translateX(100rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.shop-real-list .list-shop-check {
  width: 28rpx;
  height: 28rpx;
  margin: auto 0;
  border-radius: 14rpx;
  border: 2rpx solid #ccc;
}

.shop-real-list .shop-icon {
  width: 180rpx;
  height: 180rpx;
  margin-left: 20rpx;
}

.shop-icon-name {
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
}

.shop-icon-name .s-title {
  width: 418rpx;
  height: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  line-height: 34rpx;
  text-overflow: ellipsis;
  font-family: PingFangSC-Regular, PingFang SC;
}

.shop-icon-name .des{
  margin-top: 16rpx;
}

.shop-icon-name .shop-description {
  height: 48rpx;
  padding: 8rpx;
  color: #979797;
  font-size: 24rpx;
  background: #f2f2f2;
  border-radius: 10rpx;
  line-height: 48rpx;
}


