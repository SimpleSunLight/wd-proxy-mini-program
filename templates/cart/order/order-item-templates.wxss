/* templates/cart/order/order-item-templates.wxss */

.cart-order-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 20rpx 20rpx 0 20rpx;
}

.list-order-title {
  display: flex;
  border-radius: 20rpx;
}

.div-order-no {
  padding: 20rpx 20rpx 28rpx 20rpx;
  position: relative;
}

.div-order-one, .div-order-two{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  height: 34rpx;
  line-height: 34rpx;
  color: #333333;
}

.div-order-two{
  padding-left: 8rpx;
}

.div-order {
  display: flex;
  height: 50rpx;
  border-bottom: 2rpx solid #e7e7e7;
}

.div-order button {
  height: 30rpx;
  border-radius: 10rpx;
  width: 72rpx !important;
  padding: 0;
  font-size: 20rpx;
  border: 2rpx solid #ccc;
}

.list-order-title .icon-order {
  width: 30rpx;
  height: 30rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.list-order-title .order-name {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #333;
  line-height: 44rpx;
  margin-top: 20rpx;
  margin-left: 8rpx;
}

.touch-item {
  width: 100%;
  display: flex;
  position: relative;
  /* overflow: hidden; */
  /* justify-content: space-between; */
}

.order-real-list {
  display: flex;
  height: 180rpx;
  padding: 20rpx;
}

.order-reallist {
  display: flex;
  height: 180rpx;
  padding: 20rpx;
  position: relative;
}

.order-real-list .list-order-check {
  width: 28rpx;
  height: 28rpx;
  margin: auto 0;
  border-radius: 14rpx;
  border: 2rpx solid #ccc;
}

.order-real-list .order-icon, .order-reallist .order-icon  {
  width: 180rpx;
  height: 180rpx;
}

.order-icon-name {
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
}

.order-icon-name .s-title {
  width: 354rpx;
  height: 68rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  line-height: 34rpx;
  flex-wrap: wrap;
  text-overflow: ellipsis;
  font-family: PingFangSC-Regular, PingFang SC;
}

.order-icon-name .order-description {
  max-width: 354rpx;
  padding: 8rpx;
  color: #979797;
  font-size: 24rpx;
  margin-top: 16rpx;
  border-radius: 10rpx;
  background: #f2f2f2;
}

.cart-order-scoll-ok {
  display: flex;
  right: 20rpx;
  top: 20rpx;
  position: absolute;
  flex-direction: column;
}

.cart-order-scoll-ok .scoll-title .scoll {
  height: 44rpxpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333;
  line-height: 44rpx;
}

.cart-order-scoll-ok .scoll-title .title {
  width: 40rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 28rpx;
  padding-left: 4rpx;
}

.cart-order-scoll-ok .num {
  height: 34rpx;
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  text-align: right;
  line-height: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.cart-order-remark {
  display: flex;
  margin-top: 20rpx;
  background: #fff;
  margin-bottom: 40rpx;
  margin-left: 102rpx;
}

.cart-order-remark text, .cart-order-remark input {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.cart-order-remark text {
  width: 96rpx;
  color: #333;
  margin-right: 20rpx;
  display: inline-block;
}

.cart-order-remark input {
  color: #999;
  min-height: 34rpx !important;
}