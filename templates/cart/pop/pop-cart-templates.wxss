@import '/templates/list/kind/cart-select-templates.wxss';

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  z-index: 1;
  transition: all .2s cubic-bezier(.25, .5, .5, .9);
  -webkit-transition: all .2s cubic-bezier(.25, .5, .5, .9);
}

.pop_box {
  width: 100%;
  height: 788rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 2;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translateY(788rpx);
  -webkit-transform: translateY(788rpx);
  transition: all .2s cubic-bezier(.25, .5, .5, .9);
  -webkit-transition: all .2s cubic-bezier(.25, .5, .5, .9);
}

.animate {
  transform: translateY(0);
  -webkit-transform: translateY(0);
}

.pop-goods-icon {
  height: 174rpx;
  display: flex;
  position: relative;
}

.goods-close {
  top: 26rpx;
  right: 38rpx;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
}

.goods-icon {
  width: 120rpx;
  height: 120rpx;
  margin-top: 28rpx;
  margin-left: 40rpx;
}

.pop-goods-content {
  margin-top: 46rpx;
  margin-left: 18rpx;
}

.pop-goods-scoll {
  display: block;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: blod;
  color: #333;
  line-height: 44rpx;
}

.pop-goods-type {
  display: block;
  width: 229px;
  height: 17px;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999;
  line-height: 17px;
  margin-top: 2px;
}

.pop-goods-num {
  height: 113px;
  position: relative;
}

.goods-numbers {
  display: inline-block;
  width: 24px;
  margin-left: 20px;
  margin-top: 15px;
  height: 17px;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #979797;
  line-height: 17px;
}

.pop-confirm {
  height: 80rpx;
  width: 360rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  background-color: #FD4C72;
  position: absolute;
  bottom: 40rpx;
}

.pop_box .pop-btn {
  display: flex;
  justify-content: center;
}

.pop-goods-btn {
  width: 90px;
  height: 20px;
  line-height: 20px;
  top: 13px;
  right: 20px;
  display: flex;
  position: absolute;
  border-radius: 5px;
  border: 1px solid #b7b7b7;

}

.pop-goods-btn button {
  line-height: 20px;
  text-align: center;
  width: 23px !important;
  padding: 0 !important;
}

.pop-goods-text {
  width: 42px;
  font-size: 12px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  text-align: center;
  display: inline-block;
}

.pop-horizontal {
  width: 1px;
  height: 20px;
  background-color: #b7b7b7;
}


.dis-btn {
  background: #FEA3B7;
}