/* templates/cart/total/total-item-templates.wxss */

.total-panel {
  height: 100rpx;
  background: #fff;
  border: 2rpx solid #eee;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
}

.total-panel .total-panel-view {
  float: right;
  display: flex;
  height: 100rpx;
  align-items: center;
}

.total-panel .total-panel-view .total-num {
  width: 84rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333;
  line-height: 40rpx;
}

.total-panel .total-panel-view .total-scoll{
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333;
}

.total-panel .total-panel-view .total-scoll .total-count {
  height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
}

.total-panel .total-panel-view .total-scoll .total-company {
  height: 28rpx;
  padding-left: 4rpx;
  font-size: 20rpx;
  line-height: 28rpx;
}

.total-panel .total-panel-view .total-btn {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #FD4C72;
  border-radius: 40rpx;
  padding: 0 !important;
  font-size: 28rpx;
  font-weight: 400;
  margin: 0 20rpx;
  display: inline-block;
  font-family: PingFangSC-Regular, PingFang SC;
}